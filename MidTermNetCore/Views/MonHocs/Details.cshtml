@model MidTermNetCore.Models.MonHoc

@{
    ViewData["Title"] = "Chi tiết";
}

<h1>Chi tiết</h1>

<div>
    <h4>Môn học</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên Môn Học
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenMon)
        </dd>
        <dt class = "col-sm-2">
           Số Tín Chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoTinChi)
        </dd>
        <dt class = "col-sm-2">
           Khoa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KhoaNavigation.TenKhoa)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MaMon">Sửa</a> |
    <a asp-action="Index">Trở về danh sách</a>
</div>
