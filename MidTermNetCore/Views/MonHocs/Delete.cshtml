@model MidTermNetCore.Models.MonHoc

@{
    ViewData["Title"] = "Xóa";
}

<h1>Delete</h1>

<h3>Bạn có muốn xóa môn học này?</h3>
<div>
    <h4>MonHoc</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên Môn Học
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenMon)
        </dd>
        <dt class = "col-sm-2">
            Số Tín Chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoTinChi)
        </dd>
        <dt class = "col-sm-2">
            Khoa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KhoaNavigation.TenKhoa)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaMon" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở về danh sách</a>
    </form>
</div>
