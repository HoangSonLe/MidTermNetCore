@model IEnumerable<MidTermNetCore.Models.MonHoc>

@{
    ViewData["Title"] = "Trang chủ";
}

<h1>Trang chủ</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên Môn
            </th>
            <th>
               Số tín chỉ
            </th>
            <th>
                Khoa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenMon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTinChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhoaNavigation.TenKhoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaMon">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaMon">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaMon">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
