@model IEnumerable<MidTermNetCore.Models.SinhVien>

@{
    ViewData["Title"] = "Trang Chủ Sinh Viên";
}

<h1>Trang chủ</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ và Tên
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                Điện thoại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.HoTen
            </td>
            <td>
                @item.NgaySinh.ToString("dd-MM-yyyy")
            </td>
            <td>
                @item.DienThoai
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSV">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaSV">Chi Tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSV">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
