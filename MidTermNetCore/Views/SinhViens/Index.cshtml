@model IEnumerable<MidTermNetCore.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Trang chủ</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ tên
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Điện thoại
            </th>
            <th>
                Khoa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhoaNavigation.TenKhoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSV">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaSV">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSV">Xóa</a> |
                <a asp-action="Point" asp-route-id="@item.MaSV">Điểm</a>
            </td>
        </tr>
}
    </tbody>
</table>
